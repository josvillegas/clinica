---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pagina no encontrada" description="Volver al inicio">
  <div
    class="flex flex-col items-center justify-center gap-x-16 py-10 md:flex-row"
  >
    <img src="error404.webp" class="size-[456px]" alt="" />
    <div class="flex flex-col gap-y-3">
      <h2 class="font-extrabold text-4xl max-w-xl text-pretty text-[#033D49]">
        Lo sentimos, no pudimos encontrar la página que estas buscando
      </h2>
      <h3 class="text-2xl">Asegúrate de que estés en lugar correcto</h3>
      <div class="mt-12">
        <a
          class="bg-[#114C5F] text-white py-2 px-4 rounded-lg hover:text-white hover:bg-[#0E3D4C] font-bold"
          href="/"
          title="volver al inicio">volver al incio</a
        >
      </div>
    </div>
  </div>
</Layout>
